<div class="row">
	<h1>Create a New Ticket</h1>
	<hr>
</div>
<div class="row">
	<div class="container">
		<br>
		<%= simple_form_for @ticket , html: { :class => "form-horizontal" } do |f| %>
			<%= f.error_notification %>
			<%= f.input :reply_email %>
			<%= f.input :customer_name %>
			<%= f.input :customer_email %>
			<%= f.input :cc,label: "CC To" %>
			<%= f.input :subject %>
			<%= f.input :message, as: :text,:input_html => {class: "ticket_message",id: "ticket_message", 'rows' => 12, 'cols' => 70} %>
			<div class="col-md-offset-3"><%= f.input :notify_customer, as: :boolean, checked_value: true, unchecked_value: false, inline_label: "Notify customer via email", label: false %></div>
			<div class="col-sm-3 col-sm-offset-2 form_button"><%= f.button :submit, "Create Ticket",class: "btn btn-info" %></div>
		<% end %>
	</div>
</div>
<script type="text/javascript">
	$('#ticket_message').wysihtml5({
    	"html": false,
    	"image": false
    });
</script>