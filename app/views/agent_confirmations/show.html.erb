<div class="account-wrapper">

    <div class="account-body">

      <h3>Create a password</h3>

      <h5>You're almost done!</h5>

		<%= simple_form_for(resource, :as => resource_name ,:url => send(:"#{resource_name}_confirm_path") ,html: { :class => "form account-form" }) do |f| %>
		  <%= f.error_notification %>
		  	<%= f.input :password, required: true, autofocus: true, label: false, input_html: {class: "form-control"},placeholder: "Password" %>
		    <%= f.input :password_confirmation, required: true, label: false, input_html: {class: "form-control"},placeholder: "Confirm Password" %>
		    <%= f.input :confirmation_token, required: true, :as => :hidden, :value => @original_token %>
		  	<%= button_tag(type: 'submit', class: "btn btn-secondary btn-block btn-lg") do %>
			    Confirm Account &nbsp; <i class="fa fa-play-circle"></i>
			<% end %>
			<br>
    		<%= render "devise/shared/links" %>
		<% end %>
		
    </div> <!-- /.account-body -->
</div>