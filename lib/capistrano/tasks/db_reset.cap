namespace :deploy do
  desc 'Runs rake db:reset'
  task :db_reset => [:set_rails_env] do
    on primary fetch(:migration_role) do
      within release_path do
        with rails_env: fetch(:rails_env) do
          execute :rake, "db:reset"
        end
      end
    end
  end

  after 'deploy:migrate', 'deploy:db_reset'
end