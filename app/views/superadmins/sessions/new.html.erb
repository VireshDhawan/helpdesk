<div class="account-wrapper">

    <div class="account-body">

      <h3>Superadmin Login</h3>

      <h5>Please sign in to get access.</h5>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { method: :post, class: "form account-form" }) do |f| %>
			<%= f.error_notification %>
			<%= devise_error_messages! %>
		    <%= f.input :email, required: false, autofocus: true, label: false, input_html: {class: "form-control"},placeholder: "Email" %>
		    <%= f.input :password, required: false, label: false, input_html: {class: "form-control"}, placeholder: "Password"  %>
		    <%= f.input :remember_me, as: :boolean, label: false, inline_label: "Remember me"  if devise_mapping.rememberable? %>
		    <%= button_tag(type: 'submit', class: "btn btn-primary btn-block btn-lg") do %>
			    Signin &nbsp; <i class="fa fa-play-circle"></i>
			<% end %>
			<br>
    		<%= render "superadmins/shared/links" %>
		<% end %>


    </div> <!-- /.account-body -->
</div>