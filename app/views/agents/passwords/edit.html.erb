<div class="account-wrapper">

    <div class="account-body">

      <h2>Change your password</h2>

      <h5>Reset your password.</h5>

     <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put,class: "form account-form" }) do |f| %>
        <%= f.error_notification %>
        <%= f.input :reset_password_token, as: :hidden %>
        <%= f.full_error :reset_password_token %>
        <%= f.input :password, required: true, autofocus: true, label: false, input_html: {class: "form-control"},placeholder: "New Password" %>
        <%= f.input :password_confirmation, required: true, label: false, input_html: {class: "form-control"},placeholder: "Confirm Password" %>
        <%= button_tag(type: 'submit', class: "btn btn-secondary btn-block btn-lg") do %>
          Change My Password &nbsp; <i class="fa fa-refresh"></i>
      <% end %>
      <br>
      <%= render "agents/shared/links" %>
    <% end %>

    </div> <!-- /.account-body -->

  </div> <!-- /.account-wrapper -->