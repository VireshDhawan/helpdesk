<div class="content">

	<div class="container">

	  <div class="layout layout-stack-sm layout-main-left">

	    <div class="col-sm-7 col-md-9 layout-main">

			<div class="portlet">

				<h4 class="portlet-title">
				  <u>Filters</u>
				</h4>
				<p>Filters can help you automate ticket routing, adding a label and other tasks. &nbsp; <%= link_to "Learn More Â»", '' %></p>
				<br>

			</div>

			<div class="portlet">

				<h4 class="portlet-title">
	              <u>Existing Filters</u>
	            </h4>

		        <div class="portlet-body">
		        	<% if @filters %>
		          <table class="table table-striped table-bordered table-hover">
		            <thead>
		              <tr>
						<th>Matches</th>
						<th>Does</th>
						<th>Edit</th>
						<th>Delete</th>
		              </tr>
		            </thead>
		            <tbody>
					<% @filters.each do |filt| %>
		              <tr >
						<td>
							<%= raw "<b>From:</b> " + "#{filt.from_email}<br>" unless filt.from_email.blank? %>
							<%= raw "<b>To:</b> " + "#{filt.delivered_to}<br>" unless filt.delivered_to.blank? %>
							<%= raw "<b>Subject:</b> " + "#{filt.subject_with_keywords}<br>" unless filt.subject_with_keywords.blank? %>
							<%= raw "<b>Body:</b> " + "#{filt.body_with_keywords}<br>" unless filt.body_with_keywords.blank? %>
						</td>
						<td>
							<%= raw "<b>Add To:</b> Spam <br>" if filt.spam? %>
							<%= raw "<b>Add To:</b> Trash <br>" if filt.trash? %>
							<%= raw "<b>Add To:</b> Archive <br>" if filt.archive? %>
							<%= raw "<b>Label:</b>" "#{filt.label}" if !filt.label.blank?  %><br>
							<%= raw "<b>Assign To:</b> #{filt.agent}" if !filt.agent.blank? %><br>
							<%= raw "<b>Assign To:</b> #{filt.group}" if !filt.group.blank? %><br>
						</td>
						<td><%= link_to '', edit_filter_path(filt.id),class: "fa fa-pencil" %> </td>
						<td><%= link_to '',filter_path(filt.id),:method => :delete, :data => { :confirm => 'Are you sure?' },class: "fa fa-trash-o text-danger" %> </td>
		              </tr>
		            <% end %>
		            </tbody>
		          </table>
		          	<% else %>
						<p>No Filters created yet!</p>
					<% end %>
		        </div> <!-- /.portlet-body -->

		      </div> <!-- /.portlet -->

	  	</div>

		  	<div class="col-sm-5 col-md-3 layout-sidebar">

				<div class="portlet">
					<%= link_to "Add New Filter", new_filter_path,class: "btn btn-danger btn-block btn-jumbo" %>
					<br>
				</div> <!-- /.portlet -->

