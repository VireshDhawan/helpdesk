
<div class="account-wrapper">

    <div class="account-body">

      <h3>Resend confirmation instructions.</h3>

      <%= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: "form account-form" }) do |f| %>
			<%= f.error_notification %>
			<%= f.full_error :confirmation_token %>
		    <%= f.input :email, required: false, autofocus: true, label: false, input_html: {class: "form-control"},placeholder: "Email" %>
		    <%= button_tag(type: 'submit', class: "btn btn-secondary btn-block btn-lg") do %>
			    Resend confirmation instructions &nbsp; <i class="fa fa-play-circle"></i>
			<% end %>
			<br>
    		<%= render "superadmins/shared/links" %>
		<% end %>


    </div> <!-- /.account-body -->
</div>