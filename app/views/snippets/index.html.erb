<div class="content">

	<div class="container">

	  <div class="layout layout-stack-sm layout-main-left">

	    <div class="col-sm-7 col-md-9 layout-main">

			<div class="portlet">

				<h4 class="portlet-title">
				  <u>Snippets</u>
				</h4>
				<p>You can use snippets to reply to frequently asked questions faster. Tags are used for searching snippets (along with content/title etc)&nbsp; <%= link_to "Learn More Â»", '' %></p>
				<br>

			</div>

			<div class="portlet">

				<h4 class="portlet-title">
	              <u>Company Snippets</u>
	            </h4>

		        <div class="portlet-body">
		        	<% unless @company_snippets.blank? %>
		          <table class="table table-striped table-bordered table-hover">
		            <thead>
		              <tr>
						<th>Name</th>
						<th>Content</th>
						<% if current_agent.is_admin? %>
						<th>Edit</th>
						<th>Delete</th>
						<% end %>
		              </tr>
		            </thead>
		            <tbody>
					<% @company_snippets.each do |snippet| %>
		              <tr >
						<td><%= snippet.name %></td>
						<td><%= raw snippet.content %></td>
						<% if current_agent.is_admin? %>
						<td><%= link_to '', edit_snippet_path(snippet.id),class: "fa fa-pencil" %> </td>
						<td><%= link_to '',snippet_path(snippet.id),:method => :delete, :data => { :confirm => 'Are you sure?' },class: "fa fa-trash-o text-danger" %> </td>
						<% end %>
		              </tr>
		            <% end %>
		            </tbody>
		          </table>
		          	<% else %>
						<p>No company snippets created yet!</p>
					<% end %>

		        </div> <!-- /.portlet-body -->

		      </div> <!-- /.portlet -->

		      <div class="portlet">

				<h4 class="portlet-title">
	              <u>Your Snippets</u>
	            </h4>

		        <div class="portlet-body">
		        	<% if !@snippets.blank? %>
		          <table class="table table-striped table-bordered table-hover">
		            <thead>
		              <tr>
						<th>Name</th>
						<th>Content</th>
						<th>Edit</th>
						<th>Delete</th>
		              </tr>
		            </thead>
		            <tbody>
					<% @snippets.each do |snippet| %>
		              <tr >
						<td><%= snippet.name %></td>
						<td><%= raw snippet.content %></td>
						<td><%= link_to '', edit_snippet_path(snippet.id),class: "fa fa-pencil" %> </td>
						<td><%= link_to '',snippet_path(snippet.id),:method => :delete, :data => { :confirm => 'Are you sure?' },class: "fa fa-trash-o text-danger" %> </td>
		              </tr>
		            <% end %>
		            </tbody>
		          </table>
		          	<% else %>
						<p>You haven't created any snippets created yet!</p>
					<% end %>

		        </div> <!-- /.portlet-body -->

		      </div> <!-- /.portlet -->

	  	</div>

		  	<div class="col-sm-5 col-md-3 layout-sidebar">

				<div class="portlet">
					<%= link_to "Add New Snippet", new_snippet_path,class: "btn btn-primary btn-jumbo btn-block"%>
