<div class="col-md-9 col-sm-7">
	<div class="content">

		<div class="container">

			<div class="portlet">

				<h4 class="portlet-title">
				  <u>Create a New Ticket</u>
				  <%= link_to "Back",:back,class: "pull-right" %>
				</h4>
				<br>

		        <div class="portlet-body">
		        	<div class="row">
		        		<div class="col-sm-12 col-md-10 col-md-offset-1"><br>
		        			<%= simple_form_for @ticket , html: { :class => "form-horizontal" }, :wrapper => :normal do |f| %>
								<%= f.input :reply_email, collection: @reply_emails, include_blank: false,input_html: {class: "form-control"} %>
								<%= f.input :customer_name,input_html: {class: "form-control"} %>
								<%= f.input :customer_email,input_html: {class: "form-control"} %>
								<%= f.input :cc,label: "CC To",input_html: {class: "form-control"} %>
								<%= f.input :subject,input_html: {class: "form-control"} %>
								<%= f.input :message, as: :text,:input_html => {class: "ticket_message",id: "ticket_message", 'rows' => 15, 'cols' => 70} %>
								<div class="col-md-offset-3"><%= f.input :notify_customer, as: :boolean, checked_value: true, unchecked_value: false, inline_label: "Notify customer via email", label: false %></div>
								<div class="form-group">
				                  <div class="col-md-7 col-md-push-3">
									<%= f.button :submit, "Create Ticket",class: "btn btn-info" %>
									</div> <!-- /.col -->
				                </div>
							<% end %>
		        		</div>
		        	</div>
		        </div> <!-- /.portlet-body -->
		    </div> <!-- /.portlet -->
		</div>
	</div>
</div>
<script type="text/javascript">
	$('#ticket_message').wysihtml5({
    	"html": false,
    	"image": false
    });
</script>