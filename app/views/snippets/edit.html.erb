<div class="content">

	<div class="container">

		<div class="portlet">

			<h4 class="portlet-title">
			  <u>Edit Snippet</u>
			  <%= link_to "Back",:back,class: "pull-right" %>
			</h4>
			<br>

	        <div class="portlet-body">
	        	<div class="row">
	        		<div class="col-sm-12 col-md-8 col-md-offset-2"><br>
	        			<%= simple_form_for @snippet , html: { :class => "form-horizontal" }, :wrapper => :normal do |f| %>
							<%= f.error_notification %>
							<%= f.input :name,input_html: {class: "form-control"} %>
							<%= f.input :content, as: :text,:input_html => {class: "snippet_content",id: "snippet_content", 'rows' => 15, 'cols' => 70} %>
							<%= f.input :tags,input_html: {class: "form-control"} %>
							<% if current_agent.is_admin? %>
								<%= f.input :scope,as: :radio_buttons, collection: [["Create snippet for Company",true],["Create my personal snippet",false]] %>
							<% else %>
							<%= f.input :scope,:as => :hidden, input_html: {value: false} %>
							<% end %>
							<div class="form-group">
			                  <div class="col-md-7 col-md-push-3">
							<%= f.button :submit, "Create Snippet",class: "btn btn-info" %>
								</div> <!-- /.col -->
			                </div>	
						<% end %>
	        		</div>
	        	</div>
	        </div> <!-- /.portlet-body -->
	    </div> <!-- /.portlet -->
	</div>
</div>
<script type="text/javascript">
	$('#snippet_content').wysihtml5({
    	"html": false,
    	"image": false
    });
</script>