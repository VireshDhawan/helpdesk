<div class="row">
	<h1>Agents</h1>
	<p>Invite your team members to HelpDesk to help you answer tickets or manage the desk.&nbsp; <%= link_to "Learn More Â»", '' %></p>
	<hr>
</div>
<% if current_agent.allow_to_invite %>
<div class="row">
	<br>
	<%= link_to "Invite New Agent ", new_agent_invitation_path,class: "btn btn-danger" %>
	<br><br>
	<hr>
</div>
<% end %>
<% if current_agent.is_admin? %>
<div class="row">
	<h3>Admins</h3>
	<% if !@admins.blank?  %>
	<table class="table table-stripped">
		<tr>
			<th>*</th>
			<th>Name</th>
			<th>Email</th>
			<th>Edit</th>
			<th>Delete</th>
		</tr>
		<% @admins.each_with_index do |admin, i| %>
		<tr>
			<td><%= i+1 %></td>
			<td><%= "#{admin.first_name} #{admin.last_name}" %></td>
			<td><%= admin.email %></td>
			<td><%= link_to '', edit_manage_agent_path(admin.id),class: "fa fa-pencil" %> </td>
			<td><%= link_to '',manage_agent_path(admin.id),:method => :delete, :data => { :confirm => 'Are you sure you want to delete this agent?' },class: "fa fa-trash-o" %> </td>
		</tr>
		<% end %>
	</table>
	<% else %>
		<p>No other Admins created yet!</p>
	<% end %>
</div><br>
<hr>
<% end %>
<div class="row">
	<h3>Agents</h3>
	<% if !@agents.blank? %>
	<table class="table table-stripped">
		<tr>
			<th>*</th>
			<th>Name</th>
			<th>Email</th>
			<th>Edit</th>
			<th>Delete</th>
		</tr>
		<% @agents.each_with_index do |agent, i| %>
		<tr>
			<td><%= i+1 %></td>
			<td><%= "#{agent.first_name} #{agent.last_name}" %></td>
			<td><%= agent.email %></td>
			<% if current_agent.allow_agent_management %>
			<td><%= link_to '', edit_manage_agent_path(agent.id),class: "fa fa-pencil" %> </td>
			<% else %>
			<td><%= link_to '', '',class: "fa fa-pencil disabled" %> </td>
			<% end %>
			<td><%= link_to '',manage_agent_path(agent.id),:method => :delete, :data => { :confirm => 'Are you sure?' },class: "fa fa-trash-o" %> </td>
		</tr>
		<% end %>
	</table>
	<% else %>
		<p>No other Agents created yet!</p>
	<% end %>
</div><br>