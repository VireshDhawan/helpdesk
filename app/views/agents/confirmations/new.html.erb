<div class="container-fluid">
	<div class="row">
		<div class="container sign_in">
			<h2>Resend confirmation instructions</h2>

			<%= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: "form-horizontal" }) do |f| %>
			  <%= f.error_notification %>
			  <%= f.full_error :confirmation_token %>
			    <%= f.input :email, required: true, autofocus: true %>
			    <div class="col-sm-3 col-sm-offset-1 form_button"><%= f.button :submit, "Resend confirmation instructions",class: "btn btn-info" %></div>
			<% end %>

			<div class="col-sm-5 links"><%= render "devise/shared/links" %></div>
		</div>
	</div>
</div>