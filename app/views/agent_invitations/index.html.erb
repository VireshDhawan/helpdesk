<div class="content">

	<div class="container">

	  <div class="layout layout-stack-sm layout-main-left">

	    <div class="col-sm-7 col-md-9 layout-main">

			<div class="portlet">

				<h4 class="portlet-title">
				  <u>Agents</u>
				</h4>
				<p>Invite your team members to HelpDesk to help you answer tickets or manage the desk.&nbsp; <%= link_to "Learn More Â»", '' %></p>
				<br>

			</div>

			<% if current_agent.is_admin? %>
			<div class="portlet">

				<h4 class="portlet-title">
	              <u>Admins</u>
	            </h4>

		        <div class="portlet-body">
		        	<% if !@admins.blank?  %>
		          <table class="table table-striped table-bordered table-hover">
		            <thead>
		              <tr>
						<th>Name</th>
						<th>Email</th>
						<th>Edit</th>
						<th>Delete</th>
		              </tr>
		            </thead>
		            <tbody>
					<% @admins.each do |admin| %>
		              <tr >
							<td><%= "#{admin.first_name} #{admin.last_name}" %></td>
							<td><%= admin.email %></td>
							<td><%= link_to '', edit_manage_agent_path(admin.id),class: "fa fa-pencil" %> </td>
							<td><%= link_to '',manage_agent_path(admin.id),:method => :delete, :data => { :confirm => 'Are you sure you want to delete this agent?' },class: "fa fa-trash-o text-danger" %> </td>
		              </tr>
		            <% end %>
		            </tbody>
		          </table>
		          	<% else %>
						<p>No other Admins created yet!</p>
					<% end %>
		        </div> <!-- /.portlet-body -->

		      </div> <!-- /.portlet -->
		      <% end %>

		      <div class="portlet">

				<h4 class="portlet-title">
	              <u>Agents</u>
	            </h4>

		        <div class="portlet-body">
		        	<% if !@agents.blank? %>
		          <table class="table table-striped table-bordered table-hover">
		            <thead>
		              <tr>
						<th>Name</th>
						<th>Email</th>
						<th>Edit</th>
						<th>Delete</th>
		              </tr>
		            </thead>
		            <tbody>
					<% @agents.each do |agent| %>
		              <tr >
							<td><%= "#{agent.first_name} #{agent.last_name}" %></td>
							<td><%= agent.email %></td>
							<% if current_agent.allow_agent_management %>
							<td><%= link_to '', edit_manage_agent_path(agent.id),class: "fa fa-pencil" %> </td>
							<% else %>
							<td><%= link_to '', '',class: "fa fa-pencil disabled" %> </td>
							<% end %>
							<td><%= link_to '',manage_agent_path(agent.id),:method => :delete, :data => { :confirm => 'Are you sure you want to delete this agent?' },class: "fa fa-trash-o text-danger" %> </td>
		              </tr>
		            <% end %>
		            </tbody>
		          </table>
		          	<% else %>
						<p>No other Admins created yet!</p>
					<% end %>
		        </div> <!-- /.portlet-body -->

		      </div> <!-- /.portlet -->

	  	</div>

