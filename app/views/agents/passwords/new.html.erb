<div class="container-fluid">
	<div class="row">
		<div class="container sign_in">
			<h2>Forgot your password?</h2>

			<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post,class: "form-horizontal" }) do |f| %>
			  <%= f.error_notification %>
			    <%= f.input :email, required: true, autofocus: true %>
			    <div class="col-sm-3 col-sm-offset-1 form_button"><%= f.button :submit, "Send me reset password instructions",class: "btn btn-info"  %></div>
			<% end %>

			<div class="col-sm-5 links"><%= render "devise/shared/links" %></div>
		</div>
	</div>
</div>