<div class="account-wrapper">

    <div class="account-body">

      <h2>Password Reset</h2>

      <h5>We'll email you instructions on how to reset your password.</h5>

		<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post,class: "form account-form" }) do |f| %>
		    <%= f.input :email, required: true, autofocus: true, label: false, input_html: {class: "form-control"},placeholder: "Email" %>
		    <%= button_tag(type: 'submit', class: "btn btn-secondary btn-block btn-lg") do %>
			    Reset Password &nbsp; <i class="fa fa-refresh"></i></i>
			<% end %>
			<br>
			<%= render "agents/shared/links" %>
		<% end %>

    </div> <!-- /.account-body -->

  </div> <!-- /.account-wrapper -->